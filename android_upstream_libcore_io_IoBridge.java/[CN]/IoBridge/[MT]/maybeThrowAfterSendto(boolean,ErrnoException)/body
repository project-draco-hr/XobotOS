{
  if (isDatagram) {
    if (errnoException.errno == ECONNRESET || errnoException.errno == ECONNREFUSED) {
      return 0;
    }
  }
 else {
    if (errnoException.errno == EAGAIN || errnoException.errno == EWOULDBLOCK) {
      return 0;
    }
  }
  throw errnoException.rethrowAsSocketException();
}
