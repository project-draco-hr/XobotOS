{
  int current=pos;
  int child=2 * current + 1;
  while (child < size && size > 0) {
    if (child + 1 < size && timers[child + 1].when < timers[child].when) {
      child++;
    }
    if (timers[current].when < timers[child].when) {
      break;
    }
    TimerTask tmp=timers[current];
    timers[current]=timers[child];
    timers[child]=tmp;
    current=child;
    child=2 * current + 1;
  }
}
