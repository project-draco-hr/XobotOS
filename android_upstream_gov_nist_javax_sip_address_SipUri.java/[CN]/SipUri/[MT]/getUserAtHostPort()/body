{
  String user="";
  if (authority.getUserInfo() != null)   user=authority.getUserInfo().getUser();
  String host=authority.getHost().encode();
  int port=authority.getPort();
  StringBuffer s=null;
  if (user.equals("")) {
    s=new StringBuffer();
  }
 else {
    s=new StringBuffer(user).append(AT);
  }
  if (port != -1) {
    return s.append(host).append(COLON).append(port).toString();
  }
 else   return s.append(host).toString();
}
