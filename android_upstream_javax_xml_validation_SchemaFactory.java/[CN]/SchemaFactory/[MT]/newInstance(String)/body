{
  ClassLoader cl;
  cl=Thread.currentThread().getContextClassLoader();
  if (cl == null) {
    cl=SchemaFactory.class.getClassLoader();
  }
  SchemaFactory f=new SchemaFactoryFinder(cl).newFactory(schemaLanguage);
  if (f == null) {
    throw new IllegalArgumentException(schemaLanguage);
  }
  return f;
}
