{
  if (input == null) {
    throw new IllegalArgumentException();
  }
  if (start < 0 || end < 0 || start > input.length() || end > input.length() || start > end) {
    throw new IndexOutOfBoundsException();
  }
  this.input=input.toString();
  this.regionStart=start;
  this.regionEnd=end;
  resetForInput();
  matchFound=false;
  findPos=regionStart;
  appendPos=0;
  return this;
}
