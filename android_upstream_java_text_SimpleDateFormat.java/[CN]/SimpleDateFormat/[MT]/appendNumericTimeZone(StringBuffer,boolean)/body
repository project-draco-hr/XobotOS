{
  int offset=calendar.get(Calendar.ZONE_OFFSET) + calendar.get(Calendar.DST_OFFSET);
  char sign='+';
  if (offset < 0) {
    sign='-';
    offset=-offset;
  }
  if (generalTimeZone) {
    buffer.append("GMT");
  }
  buffer.append(sign);
  appendNumber(buffer,2,offset / 3600000);
  if (generalTimeZone) {
    buffer.append(':');
  }
  appendNumber(buffer,2,(offset % 3600000) / 60000);
}
