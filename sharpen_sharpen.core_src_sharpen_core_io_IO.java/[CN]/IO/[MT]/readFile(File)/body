{
  FileReader reader=new FileReader(file);
  try {
    StringWriter writer=new StringWriter();
    char[] buffer=new char[32 * 1024];
    int read=0;
    while ((read=reader.read(buffer)) > 0) {
      writer.write(buffer,0,read);
    }
    return writer.toString();
  }
  finally {
    reader.close();
  }
}
