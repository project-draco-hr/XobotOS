'\nVerifies simple build of a "Hello, world!" program with loadable modules. The\ndefault for all platforms should be to output the loadable modules to the same\npath as the executable.\n'
import TestGyp
test = TestGyp.TestGyp()
test.run_gyp('module.gyp', chdir='src')
test.build('module.gyp', test.ALL, chdir='src')
expect = 'Hello from program.c\nHello from lib1.c\nHello from lib2.c\n'
test.run_built_executable('program', chdir='src', stdout=expect)
test.pass_test()
